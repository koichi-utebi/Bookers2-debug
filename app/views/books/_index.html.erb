<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image, size:'80x80' %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
        <td id="favorite_buttons_<%= book.id %>"><%= render 'favorites/favorites', book: book %></td>
        <td>comments:<%= book.book_comments.count %></td>
        <td>view page:<%= book.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>